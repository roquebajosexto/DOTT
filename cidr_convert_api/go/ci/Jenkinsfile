pipeline {
  agent any
  stages {
    stage('Build2') {
      steps {
        sh '''
        cd ./cidr_convert_api/go/
        sudo docker-compose up -d --build
        '''
      }
    }
    stage('Build') {
      steps {
        echo 'Compiling and building'
        sh '''
        cd ./cidr_convert_api/go/
        go build
        '''
      }
    }

    stage('Test') {
      steps {
          echo 'Running vetting'
          sh '''
          cd ./cidr_convert_api/go/
          go vet .'''
          echo 'Running linting'
          sh '''
          cd ./cidr_convert_api/go/
          golint .
          '''
          echo 'Running test'
          sh '''
          cd ./cidr_convert_api/go/
          go test
          '''
      }
    }
  }
}
